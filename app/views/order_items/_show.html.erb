  <div class="row food_item_row">
    <div class="col-xs-4">
      <h4><%= food_item.name %></h4>
      Unit Price: <span style="color: green"><%= number_to_currency order_item.unit_price %></span>
    </div>
    <div class="col-xs-8">
      <div class="row">
        <div class="col-xs-4 text-right">
          Quantity: <span><%= order_item.quantity.to_i %></span>
        </div>
        <div class="col-xs-4 text-right">Total Price: <span style="color: green"><%= number_to_currency order_item.total_price %></span></div>
        <div class="col-xs-4 text-right">
            <%= link_to "Delete", order_item, { data: { confirm: "Are you sure you wish to delete the food '#{order_item.food_item.name}' from your order?" }, method: :delete, class: "btn btn-danger" } %>
        </div>
      </div>
    </div>
  </div>